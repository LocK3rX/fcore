on join:
	set join message to "&8[&5+&8] %player%"
	send player title "&5&lFerajna" with subtitle "&a&lWitaj!" for 5 seconds
	send "{@tag} -=-=-=-=-=-=-=-=-=-=-=-=-=-=-"
	send "{@tag} &5&lFerajna&7&lCore &f1.0.0"
	send "{@tag} &5Witamy %player%!"
	send "{@tag} &6Stan konta: &e/kasa"
	send "{@tag} -=-=-=-=-=-=-=-=-=-=-=-=-=-=-"
	if file "plugins/Skript/scripts/Bany/%player%.yml" exists:
		wait 1 tick
		kick player due to "&cJestes zbanowany na ferajnie!"

on quit:
	set leave message to "&8[&c-&8] %player%"

# smierci
on death of player:
	add 1 to {smierci.%player%}
command /smierci:
	description: Licznik smierci
	executable by: players
	trigger:
		send "{@tag} &eZginales &6%{smierci.%player%}% &erazy"
# smierci

# sethome
command /sethome:
	description: Ustawia dom
	executable by: players
	trigger:
		set {homes.%player%.location} to location of player
		send "{@tag} &aPomyslnie ustawiono dom!"
command /home:
	description: Teleportuje do domu
	executable by: players
	trigger:
		if {homes.%player%.location} is not set:
			send "{@tag} &cNie masz ustawionego domu!"
			stop trigger
		send "{@tag} &eRozpoczynam teleportacje!"
		send "{@tag} &eZostaniesz teleportowany za 5 sekund!"
		wait 5 seconds
		teleport player to {homes.%player%.location}
		send "{@tag} &aTeleportowano pomyslnie!"
# sethome

# chat
on chat:
	cancel event
	broadcast "&8(&6%player%&8) &7%message%"
# chat

# gamemode
command /gamemode [<text>]:
	description: Ustawia gamemode
	aliases: gm
	executable by: players
	trigger:
		player has permission "poyebany.gm":
			arg 1 is not set:
				send "{@tag} &cPoprawne uzycie: /gamemode [tryb]"
				send "{@tag} &cDostepne tryby: c/s/a"
			arg 1 is "1" or "c":
				set the gamemode of player to creative
				send "{@tag} &aPomyslnie ustawiles tryb &7kreatywny"
			arg 1 is "2" or "s":
				set the gamemode of player to survival
				send "{@tag} &aPomyslnie ustawiles tryb &7przetrwania"
			arg 1 is "3" or "a":
				set the gamemode of player to adventure
				send "{@tag} &aPomyslnie ustawiles tryb &7przygodowy"
		else:
			send "{@tag} &cNie masz uprawnien!"
# gamemode

# give
command /i [<items>]:
	description: Daje ci przedmioty
	executable by: players
	trigger:
		player has permission "poyebany.give":
			arg 1 is not set:
				send "{@tag} &cPoprawne uzycie: /i [przedmiot]"
			loop arguments:
				give loop-item to player
		else:
			send "{@tag} &cNie masz uprawnien!"
command /give [<item types>] [<player>]:
	description: Daje komus przedmioty
	trigger:
		player has permission "poyebany.give":
			send "{@tag} &eDales &6%argument 1% &edla &6%argument 2%" to player
			loop argument 1:
				give loop-item to argument 2
				send "{@tag} &eOtrzymano &6%loop-item% &eod &6%player%" to argument 2
		else:
			send "{@tag} &cNie masz uprawnien!"
# give

# tp
command /tp [<player>]:
	description: Teleportuje do gracza
	trigger:
		player has permission "poyebany.tp":
			arg 1 is not set:
				send "{@tag} &cPoprawne uzycie: /tp [gracz]"
			arg 1 is set:
				send "{@tag} &aTeleportuje do &7%arg 1%"
				teleport player to argument 1
		else:
			send "{@tag} &cNie masz uprawnien!"
# tp

# kick
command /kick [<player>]:
	description: Wyrzuca gracza
	trigger:
		player has permission "poyebany.kick":
			send "{@tag} &aWyrzuciles &7%arg 1% &az serwera!"
			kick argument 1 due to "&cZostales wyrzucony z serwera!"
		else:
			send "{@tag} &cNie masz uprawnien!"
# kick

# time
command /time set [<time>]:
	aliases: ts
	description: Zmienia czas w grze
	trigger:
		player has permission "poyebany.timeset":
			arg 1 is not set:
				send "{@tag} &cPoprawne uzycie: /time set HH:MM"
			arg 1 is set:
				send "{@tag} &aPomyslnie zmieniles czas na &7%arg 1%&a!"
				set time to argument 1
			else:
				send "{@tag} &cNie masz uprawnien!"
# time

# weather
command /weather [<text>]:
	description: Ustawia pogode
	trigger:
		player has permission "poyebany.weather":
			arg 1 is not set:
				send "{@tag} &cPoprawne uzycie: /weather sloneczna/deszczowa/clear"
			arg 1 is "sunny" or "sloneczna" or "clear":
				send "{@tag} &aPomyslnie zmieniles pogode na &7sloneczna&a!"
				set the weather in player's world to clear
			arg 1 is "rainy" or "deszczowa":
				send "{@tag} &aPomyslnie zmieniles pogode na &7deszczowa&a!"
				set the weather in player's world to rainy
		else:
			send "{@tag} &cNie masz uprawnien!"
# weather

# clear
command /clear:
	aliases: ci
	description: Czysci ekwipunek
	trigger:
		player has permission "poyebany.clear":
			send "{@tag} &aPomyslnie wyczysciles swoj ekwipunek!"
			clear the player's inventory
		else:
			send "{@tag} &cNie masz uprawnien!"
