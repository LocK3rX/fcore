variables:
	{smierci.%player%} = 0
	{ban.%player%} = false

on script load:
	if folder "plugins/Skript/scripts/Bany" doesn't exists:
		create folder "plugins/Skript/scripts/Bany"

# banowanie
command /ban [<player>]:
	description: Banuje gracza online
	trigger:
		player has permission "poyebany.ban":
			if arg 1 is not set:
				send "{@tag} &cPoprawne uzycie: /ban [gracz]"
			if arg 1 is set:
				if file "plugins/Skript/scripts/Bany/%arg 1%.yml" exists:
					send "{@tag} &cTen gracz juz ma bana!"
				if file "plugins/Skript/scripts/Bany/%arg 1%.yml" doesn't exists:
					kick argument 1 due to "&4ZOSTALES ZBANOWANY"
					create file "plugins/Skript/scripts/Bany/%arg 1%.yml"
					broadcast "{@tag} &4&lBAN! &cGracz &4%arg 1% &czostal zbanowany!"
		else:
			send "{@tag} &cNie masz uprawnien!"
command /offlineban [<offlineplayer>]:
	description: Banuje gracza offline
	trigger:
		player has permission "poyebany.ban":
			if arg 1 is not set:
				send "{@tag} &cPoprawne uzycie: /ban [gracz]"
			if arg 1 is set:
				if file "plugins/Skript/scripts/Bany/%arg 1%.yml" exists:
					send "{@tag} &cTen gracz juz ma bana!"
				if file "plugins/Skript/scripts/Bany/%arg 1%.yml" doesn't exists:
					create file "plugins/Skript/scripts/Bany/%arg 1%.yml"
					broadcast "{@tag} &4&lBAN! &cGracz &4%arg 1% &czostal zbanowany!"
		else:
			send "{@tag} &cNie masz uprawnien!"
command /unban [<offlineplayer>]:
	description: Daje UNBANA
	trigger:
		player has permission "poyebany.ban":
			if arg 1 is not set:
				send "{@tag} &cPoprawne uzycie: /unban [gracz]"
			if arg 1 is set:
				if file "plugins/Skript/scripts/Bany/%arg 1%.yml" exists:
					delete file "plugins/Skript/scripts/Bany/%arg 1%.yml"
					send "{@tag} &aPomyslnie odbanowano &7%arg 1%"
			if file "plugins/Skript/scripts/Bany/%arg 1%.yml" doesn't exists:
				send "{@tag} &cTen gracz nie jest zbanowany!"
		else:
			send "{@tag} &cNie masz uprawnien!"
# banowanie

# pomoc
command /help:
	description: Help
	trigger:
		player has permission "poyebany.help":
			send "&c&lFerajna Admin Help"
			send "&c/ban [player] - Bans a player"
			send "&c/offlineban [player] - Bans a offline player"
			send "&c/unban [player] - Unbans a player"
			send "&c/kick [player] - Kicks a player"
			send "&c/weather [sunny/rainy] - Set weather"
			send "&c/time set [HH:MM] - Set time"
			send "&c/gamemode [c/s/a] - Set player's gamemode"
			send "&c/i [item] - Take item"
			send "&c/give [item] [player] - Give specific item to player"
